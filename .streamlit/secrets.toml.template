# Streamlit Secrets Template
# Reference: https://docs.streamlit.io/develop/concepts/connections/secrets-management
#
# IMPORTANTE:
# 1. Copie este arquivo para secrets.toml
# 2. Preencha com suas credenciais reais
# 3. NUNCA commite secrets.toml no Git!

# ==============================================================================
# USER CREDENTIALS (para producao)
# ==============================================================================
[users]
# Use bcrypt hash, nao senhas em texto plano!
# Para gerar hash: python -c "import bcrypt; print(bcrypt.hashpw(b'sua_senha', bcrypt.gensalt()).decode())"
admin_password = "BCRYPT_HASH_AQUI"
cacula_password = "BCRYPT_HASH_AQUI"
user_password = "BCRYPT_HASH_AQUI"

# ==============================================================================
# DATABASE CREDENTIALS
# ==============================================================================
[database]
sql_server = "SEU_SERVER_SQL"
sql_database = "SUA_DATABASE"
sql_user = "SEU_USUARIO"
sql_password = "SUA_SENHA"

# ==============================================================================
# AUTHENTICATION SECRETS
# ==============================================================================
[auth]
# Cookie secret (32 bytes random)
# Para gerar: python -c "import secrets; print(secrets.token_hex(32))"
cookie_secret = "GERAR_TOKEN_HEX_32_BYTES"

# JWT secret (opcional, se usar JWT)
jwt_secret = "GERAR_OUTRO_TOKEN_HEX_32_BYTES"

# ==============================================================================
# API KEYS (se necessario)
# ==============================================================================
[api]
